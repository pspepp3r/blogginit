{% extends 'app/layout/layout.twig' %}

{% block title %}
	Blogginit | Create
{% endblock %}

{% block page_title %}
	Create
{% endblock %}


{% block page_description %}
	Create a new blog!
{% endblock %}

{% block content %}

    <div class="container mt-5">
        <form action="/blogs/store" method="POST">
            {{ csrf.fields | raw }}
            <div class="mb-3">
                <label for="title" class="form-label">Blog Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title" required>
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Blog Content</label>
                <textarea class="form-control" id="content" name="content" rows="5" placeholder="Write your blog content here..." required></textarea>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" id="category" name="category" required>
                    <option value="" disabled selected>Select a category</option>
                    <option value="tech">Tech</option>
                    <option value="lifestyle">Lifestyle</option>
                    <option value="education">Education</option>
                </select>
            </div>
            {# <div class="mb-3">
                <label for="image" class="form-label">Blog Image</label>
                <input type="file" class="form-control" id="image" name="image">
            </div> #}
            <button type="submit" class="btn btn-primary">Create Blog</button>
        </form>
    </div>


{% endblock %}
